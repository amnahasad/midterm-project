      </div>
      <h5>Customer's Information</h5>
      <form>
        <div class="row">
          <div class="col">
            <h6>First name</h6><input type="text" class="form-control" placeholder="Enter first name">
          </div>
          <div class="col">
            <h6>Last name</h6><input type="text" class="form-control" placeholder="Enter last name">
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col">
            <h6>Phone number</h6><input type="tel" class="form-control" placeholder="Enter phone number" id="phone"
              name="phone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}">
          </div>
          <div class="col">
            <h6>Comments</h6><input type="text" class="form-control" placeholder="Add comments">
          </div>
        </div>
        <!-- ERROR PROMPT CONTAINER  -->
        <div id="errorPrompt"></div>

